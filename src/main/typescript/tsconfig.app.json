{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.json",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": false,
    "resolveJsonModule" : true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": false,
    "types": [
      "node",
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
